<odoo>
  <record id="oauth_form" model="ir.ui.view">
    <field name="name">OAuth Client</field>
    <field name="model">oauth.client</field>
    <field name="arch" type="xml">
      <form string="OAuth Client">
        <sheet>
          <group name="Detail">
            <field name="client_id" />
            <field name="user_id" />
            <field name="grant_type" />
            <field name="response_type" />
            <field name="scopes" />
            <field name="redirect_uris" />
          </group>
        </sheet>

      </form>
    </field>
  </record>

  <record id="oauth_action" model="ir.actions.act_window">
    <field name="name">OAuth</field>
    <field name="res_model">oauth.client</field>
    <field name="view_mode">tree,form,kanban</field>
  </record>

  <menuitem id="oauth" name="OAuth" />

  <menuitem id="oauth_action_menu" name="OAuth Client" parent="oauth" action='oauth_action' />

</odoo>